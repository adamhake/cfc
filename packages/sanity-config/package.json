{
  "name": "@chimborazo/sanity-config",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./schemas": {
      "import": "./src/schemas/index.ts",
      "types": "./src/schemas/index.ts"
    },
    "./queries": {
      "import": "./src/queries/index.ts",
      "types": "./src/queries/index.ts"
    },
    "./client": {
      "import": "./src/client.ts",
      "types": "./src/client.ts"
    },
    "./components": {
      "import": "./src/components/index.ts",
      "types": "./src/components/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@sanity/client": "^7.16.0",
    "@sanity/icons": "^3.7.4",
    "@sanity/image-url": "^2.0.3",
    "@sanity/types": "^5.12.0",
    "@t3-oss/env-core": "^0.13.10",
    "groq": "^5.12.0",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "@sanity/ui": "^2.0.0 || ^3.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "sanity": "^3.0.0 || ^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@total-typescript/ts-reset": "catalog:",
    "@types/node": "^25.3.0",
    "@types/react": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  }
}
