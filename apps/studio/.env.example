# ============================================
# SANITY STUDIO ENVIRONMENT VARIABLES
# ============================================
# All variables are validated at build time using T3 Env.
# See apps/studio/src/env.ts for validation schema.

# Sanity Project Configuration (required)
# Get these from: https://sanity.io/manage/project/[PROJECT_ID]
SANITY_STUDIO_PROJECT_ID=
SANITY_STUDIO_DATASET=production
SANITY_STUDIO_API_VERSION=2024-01-01

# Web App Preview URL (optional - defaults to http://localhost:3000)
# Used by the Presentation tool to preview content changes
# For production: https://chimborazopark.org
SANITY_STUDIO_PREVIEW_URL=http://localhost:3000

# API URL for AI Metadata Generation (optional - defaults to http://localhost:3000/api/generate-metadata)
# Used by the "Generate Metadata" action for AI-powered image metadata
# For production: https://chimborazopark.org/api/generate-metadata
SANITY_STUDIO_API_URL=http://localhost:3000/api/generate-metadata
